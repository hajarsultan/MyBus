<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:contentPadding="12dp"
            android:layout_gravity="top">



                <android.support.design.widget.TextInputEditText
                    android:id="@+id/bus_search"
                    android:drawableLeft="@drawable/search_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="إبحث بجهة الأوتوبيس ..."
                    android:imeOptions="actionSearch"
                    android:background="@null"
                    android:inputType="text"/>

        </android.support.v7.widget.CardView>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="net.hajar.mybus.BusMapActivity" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="bottom"
            android:padding="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"

                android:layout_gravity="center_horizontal">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إختيار أوتوبيس"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/selectBuses"
                    android:padding="25dp"
                    android:layout_weight="1" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="إظهار الأوتوبيسات"
                    android:id="@+id/showBuses"
                    android:textSize="16sp"
                    android:padding="25dp"
                    android:textStyle="bold"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

    </LinearLayout>
